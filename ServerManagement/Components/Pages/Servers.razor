@page "/servers"

<h3>Servers</h3>
<br />
<br />
<div class="container-fluid text-center">
    <div class="row w-100">
        @foreach (string city in cities)
        {
            <div class="card" style="width: 8rem;padding-top:0.8rem">
                <img class="card-img-top" src="@($"/images/{city}.png")" alt="Card image cap">
                <div class="card-body">
                    <button type="button" class="btn btn-primary">@city </button>
                </div>
            </div>
        }
    </div>
</div>
<br />
<select>
    @foreach (string city in cities)
    {
        <option value="@city">@city</option>
    }
</select>
<br />
<br />
<ul style="padding-left:0em">
    @foreach (Server server in servers)
    {
        <li style="list-style:none">
            @server.Name - @server.City:
            <span style="color:@(server.IsOnline ? "green" : "red")">@server.GetStatus() </span>
            &nbsp;
            <a href="/servers/@server.ServerId" class="btn btn-link">Edit</a>
        </li>
    }
</ul>

<ul style="padding-left:0em">
    @foreach (string city in cities)
    {
        <li style="list-style:none">
            @city
        </li>
    }
</ul>

@code {
    // private List<Server> servers = ServersRepository.GetServersByCity("Toronto");
    private List<Server> servers = ServersRepository.GetAllServers();
    private List<string> cities = CitiesRepistory.GetCities();
}
